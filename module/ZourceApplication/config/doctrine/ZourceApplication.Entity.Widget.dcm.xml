<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="ZourceApplication\Entity\Widget" table="application_widget">
        <id name="id" type="uuid_binary" />

        <field name="installationDate" type="datetime">
            <gedmo:timestampable on="create" />
        </field>

        <field name="updateDate" type="datetime">
            <gedmo:timestampable on="update" />
        </field>

        <field name="type" type="string" />
        <field name="options" type="array" />
        <field name="column" type="integer" />
        <field name="position" type="integer" />

        <many-to-one target-entity="ZourceApplication\Entity\WidgetContainer" field="widgetContainer" inversed-by="widgets" fetch="EAGER">
            <join-column on-delete="CASCADE" />
        </many-to-one>
    </entity>
</doctrine-mapping>
