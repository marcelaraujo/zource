<?php

$api = $this->api;

$this->placeholder('layout')->pageTitle = $api->getName() . ' (v' . $this->escapeHtml($api->getVersion()) . ')';

foreach ($api->getServices() as $service) {
    echo $this->render('zource-application/apigility/service', [
        'service' => $service,
        'embedded' => true,
        'showDetails' => $this->showDetails,
    ]);
}
